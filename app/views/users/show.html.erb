<%- model_class = User -%>
<div class="page-header">
  <h1>Identifer　　<small>User page</small></h1>

  <dl class="dl-horizontal">
    <%if current_user.group == @user.group %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:image) %></th>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:account) %></th>
          <th><%= model_class.human_attribute_name(:comment) %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= image_tag show_image_user_path(@user), :class => 'middle-img'%></td> 
          <td><%= @user.name %></td>
          <td><%= @user.account %></td>
          <td><%= @user.comment %></td>     
        </tr>
      </tbody>
    </table>
    <%else%>
    <dd>Please Back</dd>
    <%= link_to t('.back', :default => t("helpers.links.back")),
    users_path, :class => 'btn btn-default'  %>
    <%end%>
  </dl>
  <%if current_user.id == @user.id %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
  users_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
  edit_user_path(@user), :class => 'btn btn-default' %>
  <%= link_to "Log out", logout_path,:method => 'delete',:class => 'btn btn-default'%>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
  user_path(@user),
  :method => 'delete',
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
  :class => 'btn btn-danger' %>
  <%end%>
