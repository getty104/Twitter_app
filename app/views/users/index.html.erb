<%- model_class = User -%>
<div class="page-header">
    <h1>Identifer　　<small>User List</small></h1>
</div>

<%if logged_in?%>
 <%= render 'layouts/header' %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:account) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
     
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <%if current_user.group == user.group%>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.account %></td>
      <td><%= image_tag show_image_user_path(user), :class => 'middle-img'%></td>      
    </tr>
    <%end%>
    <% end %>
  </tbody>
</table>
<%else%>
<h2>You are not Login!</h2>
<%= link_to "Please Log in", login_path,:class => 'btn btn-primary' %>
<%end%>

